{
  "name": "tone-dark-syntax",
  "theme": "syntax",
  "version": "0.0.0",
  "description": "A dark Tone syntax theme",
  "keywords": [
    "dark",
    "tone",
    "syntax"
  ],
  "repository": "https://github.com/simurai/tone-dark-syntax",
  "license": "MIT",
  "main": "lib/main",
  "engines": {
    "atom": ">1.9.0 <2.0.0"
  },
  "dependencies": {
    "chroma-js": "1.1.1"
  },
  "configSchema": {
    "color": {
      "title": "Custom Colors",
      "type": "object",
      "properties": {
        "uno": {
          "title": "Uno",
          "description": "Customize accent color: 1",
          "order": 1,
          "type": "color",
          "default": "#9beaca"
        },
        "duo": {
          "title": "Duo",
          "description": "Customize accent color: 2",
          "order": 2,
          "type": "color",
          "default": "#b6a3ef"
        },
        "tri": {
          "title": "Tri",
          "description": "Customize accent color: 3",
          "order": 3,
          "type": "color",
          "default": "#ff9a91"
        },
        "bg": {
          "title": "Background",
          "description": "Customize the background color",
          "order": 4,
          "type": "color",
          "default": "#222222"
        },
        "syncUI": {
          "title": "Sync UI",
          "description": "After making some changes, enable this to sync the colors also with other UI themes and packages. Note: It may take a few seconds to take effect. Doing this manually keeps the performance police happy. ðŸš“",
          "order": 5,
          "type": "boolean",
          "default": "true"
        }
      }
    }
  }
}
